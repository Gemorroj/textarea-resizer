{"js": ["oex_shim/operaextensions_injectedscript.js", "includes/textarea_resizer.js"], "matches": ["<all_urls>"], "include_globs": ["*"], "exclude_globs": [], "run_at": "document_start", "all_frames" : true}],
"web_accessible_resources" : ["images/icon_18x18.png","images/icon_48x48.png","images/icon_64x64.png","includes/textarea_resizer.js","options.css","options.js","icon.png","LICENSE.TXT"],
"permissions" : ["https://*/*", "storage", "http://*/*"],

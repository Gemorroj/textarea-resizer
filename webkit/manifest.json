{
"name": "Textarea resizer",
"developer": {"name" : "Gemorroj", "url" : "http://code.google.com/p/textarea-resizer/"},
"description" : "When you hover over a textarea in the bottom right corner the icon appears, pulling it can resize the textarea.",
"manifest_version" : 2,
"version" : "2.12",
"background" : {"page" : "options.html"},
"icons" : {"128": "images/icon_18x18.png", "48": "images/icon_48x48.png"},
